// DEFINIMOS LAS VARIABLES
int J;
int NUMEROS=0; 
int VALOR;  
#define PULSO 8
int LED[6]={2,3,4,5,6,7};

void setup() {
 pinMode(PULSO, INPUT); // PULSO SERA NUESTRO VALOR DE ENTRADA DEL PIN 8 DEL ARDUINO DONDE ESTA NUESTRO BOTON
for(J=0;J<=6;J++){ 
pinMode(LED[J], OUTPUT); //LED ES NUESTRA SALIDA DE ARREGLO DE LOS LEDS
}
}
void loop() {
if (digitalRead(PULSO)==LOW){ //SI SE PRESIONA EL BOTON SE OBTIENE UN LOW Y ESPERAMOS A QUE RECONOZCA PARA ESO SE PONE EL SECUENCIA EL DELAY
delay(350);
NUMEROS++; //EL INCREMENTO ES DE 1
if (NUMEROS>63){
NUMEROS=0; //SE REINICIA COMO MENCIONAMOS
}
while (digitalRead(PULSO)==HIGH){}
}
VALOR=NUMEROS;
 
for(J=0; J<=6; J++){ 
digitalWrite(LED[J], VALOR%2); //CONVIERTE EL CONTEO DEL PULSO EN UN SISTEMA DE ARREGLO BINARIO TOMANDO DE IGUAL MANERA CADA RESIDUO Y DIVIDIRLO PARA 2
VALOR=VALOR/2;
}
}
